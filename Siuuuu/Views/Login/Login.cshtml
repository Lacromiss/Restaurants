@using Siuuuu.Models.Account
@using Siuuuu.Vm
@model LoginVm
@using Microsoft.AspNetCore.Identity
@inject UserManager<AppUser> userManager
@inject SignInManager<AppUser> signInManager
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->

    <title>Login</title>
    <link rel="stylesheet" href="~/Pages/Booking/loginn.css">
</head>
<body>
    <body>
        <div class="container">
            <div class="item-container">
                <h2 class="log-in">Log in</h2>
            </div>
         <ul>
   @if (signInManager.IsSignedIn(User))
                {
                    <li><a asp-action="LogOut" asp-controller="Login">LogOut</a></li>
                }
            </ul>

            <form method="post">
                <div class="form-input">
                    <label asp-for="EmailOrUsername" class="label">Email</label>
                    <input asp-for="EmailOrUsername" type="text">
                    <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
                </div>
                <div class="form-input">
                    <label asp-for="Password" class="label">Password</label>
                    <input asp-for="Password" type="password">
                    <span asp-validation-for="EmailOrUsername" class="text-danger"></span>

                </div>
                <div class="display-space-between">
                    <div>
                        <input asp-for="RememberMe" type="checkbox" checked>
                        <label asp-for="RememberMe" class="chekbox-label">Remember Me</label>
                        <span asp-validation-for="EmailOrUsername" class="text-danger"></span>

                    </div>

                </div>
                <div>
                    <button type="submit">Log in</button>
                </div>
            </form>

        </div>
    </body>

















    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>



