@using Siuuuu.ViewModel
@model List<BuyProductCount>
@{
    ViewData["Title"] = "Basket";
}

<section style="padding-top: 150px;">
    <div class="container" style="background-color: white;min-height:100vh">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Img</th>
                    <th scope="col">Count</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {


                <tbody>
                    <tr>

                        <td style="color:#bfa279; font-size:20px">
                            @item.Name

                        </td>

                        <td style="color:#bfa279; font-size:20px">  <img src="~/Pages/image/@item.ImgUrl" alt="Psychopomp" width="150x" /></td>
                        <td style="color:#bfa279; font-size:20px">
                            <a style="color:#bfa279; font-size:20px" asp-action="Cix" asp-controller="Buy" asp-route-Id="@item.Id">-</a>

                            @item.Count
                            <a style="color:#bfa279; font-size:20px" asp-action="Topla" asp-controller="Buy" asp-route-Id="@item.Id">+</a>

                        </td>
                        <td style="color:#bfa279; font-size:20px">@item.Price</td>
                    </tr>

                </tbody>
            }
        </table>
        <button type="button" class="btn" style="background-color:#bfa279">   <a asp-action="Create" asp-controller="Adres">Check out</a> </button>

    </div>
</section>