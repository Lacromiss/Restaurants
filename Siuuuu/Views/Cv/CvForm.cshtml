<section id="formm">


    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8">
                <h1 style="text-align:center;color:#bfa279">
                    HANSI VƏZİFƏ AXTARIRSINIZ?
                </h1>
            </div>
            <div class="col-lg-2" ></div>
            <div class="col-lg-2"></div>


            <div class="col-lg-8" >
                <form id="mustikkk" method="post" enctype="multipart/form-data">

                    <input asp-for="Name" style="width:100%" type="text" placeholder="Name (required)" required >
                    <span class="text-danger" asp-validation-for="Name"></span>
                    <input style="width:100%" asp-for="EmailAdress" type="email" placeholder="Return address (required)" required>
                    <span class="text-danger" asp-validation-for="EmailAdress"></span>
