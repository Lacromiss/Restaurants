                    <span class="text-danger" asp-validation-for="phone"></span>
                    <select asp-for="Jobb" class="Kontent">

                        <option value="ressam">Ressam</option>
                        <option value="asbaz">Asbaz</option>
                        <option value="musiqici">Musiqici</option>
                    </select>
                    <span asp-validation-for="Jobb"></span>
                    <input style="width:100%" asp-for="Pdf" name="Pdf" />
                    <span asp-validation-for="Pdf"></span>
    <button type="submit" value="Send">Send</button>
                </form>

            </div>
            <div class="col-lg-3" ></div>
        </div>
    </div>
</section>

