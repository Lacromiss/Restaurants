@using Siuuuu.Models.Menu
@model Product

@{
    ViewData["Title"] = "Update";
}


<div class="cont" style="width: 100%; height:130vh;background-color:lightgray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6 class="rainbow-power" style="text-align:center; font-size:43px; width:100%;color:black;font-weight:600 ">Update menu item</h6>
            </div>
            <div class="col-lg-3"></div>
            <div class="col-lg-7">
                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" style="color:black" asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" type="text" style="width:100%;background-color:#73879c;color:white;font-weight:600; border: 2px black solid" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" style="color:black" asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" type="text" style="width:100%;background-color:#73879c;color:white;font-weight:600; border: 2px black solid" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" style="color:black" asp-for="Photo2" class="form-label"></label>
                        <input asp-for="Photo2" style="width:100%;background-color:#73879c;color:white;font-weight:600; class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" accept="image/*">
                        <span asp-validation-for="Photo2"></span>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" style="color:black" asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" type="text" style="width:100%;background-color:#73879c;color:white;font-weight:600; border: 2px black solid" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <span asp-validation-for="Price"></span>
                    </div>
                    <div class="mb-3">
                        <select class="select2 form-control js-example-basic-single" asp-for="CatagoryId" asp-items="@(new SelectList(ViewBag.catagoryy,nameof(Catagory.Id),nameof(Catagory.Name)))">
                            <option disabled selected>CATEGORY</option>
                        </select>
                        <span asp-validation-for="CatagoryId"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" value="create">Update</button>
                    </div>
                </form>
            </div>
            <div class="col-lg-1"></div>

        </div>
    </div>
    <
</div>

