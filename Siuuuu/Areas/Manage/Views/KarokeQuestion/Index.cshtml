@using Siuuuu.Models.Karoke
@model List<KarokeQuestion>
@{
    ViewData["Title"] = "Index";
}


<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
        </div>

        <div class="clearfix"></div>

        <div class="row">
                        <div class="col-md-12 col-sm-12 "><a asp-action="Create" asp-area="Manage" asp-controller="KarokeQuestion"><button type="button" class="btn btn-dark">Create</button></a>
 </div>

            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Karoke page Question-answer </h2>

                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">

                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Question</th>
                                                <th>Answer</th>
                                                <th>Update</th>
                                                <th>Delete</th>

                                            </tr>
                                        </thead>
                                        @foreach (var item in Model)
                                        {



                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <h1 style="font-size:20px">@item.Question</h1>
                                                    </td>

                                                    <td><h1 style="font-size:20px">@item.Answer</h1></td>
                                                    <td>
                                                        <a asp-action="Update" asp-area="Manage" asp-controller="KarokeQuestion" asp-route-Id="@item.Id" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>

                                                    </td>
                                                     <td>
                                                        <a asp-action="Delete" asp-area="Manage" asp-controller="KarokeQuestion" asp-route-Id="@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>

                                                    </td>



                                            </tbody>
                                        }

                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>








        </div>
    </div>
</div>