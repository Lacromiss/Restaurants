@using Siuuuu.Models.Mail
@model SendEmail
@{
    ViewData["Title"] = "SendMail";
}
@using (Html.BeginForm("SendMail", "Email", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bize Ulaşın</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="alert alert-info">@TempData["Message"]</div>

        <h4 style="text-align:center">Mesaj gondereceyiniz email</h4>
        <div class="form-group">
            @Html.LabelFor(model => model.EmailAdress, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmailAdress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmailAdress, "", new { @class = "text-danger" })
            </div>
        </div>
        <h4 style="text-align:center"> MESAJINIZ </h4>

        <div class="form-group">
            @Html.LabelFor(model => model.Kontent, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Kontent, new { htmlAttributes = new { @class = "form-control" }  } )
                @Html.ValidationMessageFor(model => model.Kontent, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="mb-3">
            <div class="col-md-offset-2 col-md-10">
                <input style="background-color:black;width:100px;height:65px;color:white" type="submit" value="GÖnder" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
